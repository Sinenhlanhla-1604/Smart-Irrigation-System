
USERS {
	user_id integer pk unique
	name string
	surname string
	email text
	last_login datetime
	password varchar
	location varchar
}

PWR_TEMP {
	device_id int pk unique
	sequence int
	temp_celsius float
	received_at datetime
}

WATER_DETECTOR {
	device_id int pk unique
	sequence int
	water_detected char
	received_at datetime
}

NOTIFICATIONS {
	notification_id int pk unique
	sequence int
	device_id int
	received_at datetime
	user_id integer >* USERS.id
	alert_message varchar
}

PULSE_DETECTOR {
	device_id int pk unique
	sequence int
	pulse_count float
	leak_detected char
	received_at datetime
}

MAGNETIC {
	device_id varchar pk unique
	status string
	sequence integer
	received_at datetime
}

USER_DEVICE {
	device_id integer pk
	user_id integer > USERS.id
	sensor_type char
}

