from psycopg2.extras import Json
import psycopg2
import os
from datetime import datetime
from flask import request

# Environment-based configuration
DB_USER = os.getenv("DB_USER", "postgres")
DB_PASSWORD = os.getenv("DB_PASSWORD", "123456")
DB_NAME = os.getenv("DB_NAME", "SmartGrow")
DB_HOST = os.getenv("DB_HOST", "localhost")
DB_PORT = os.getenv("DB_PORT", "5432")

TARGET_CONN_STR = f"dbname='{DB_NAME}' user='{DB_USER}' password='{DB_PASSWORD}' host='{DB_HOST}' port='{DB_PORT}'"

def get_db_connection():
    try:
        conn = psycopg2.connect(TARGET_CONN_STR)
        print("Connected to the database")
        return conn
    except Exception as e:

        print(f" DB connection error:{e}")
        raise


def save_to_db(entry):
    try:
        conn = get_db_connection()
        cur = conn.cursor()

        insert_query = """
            INSERT INTO device_data 
            (device_id, device_type, timestamp, sequence, raw_payload, decoded, sensor_group, received_at)
            VALUES (%s, %s, %s, %s, %s, %s, %s, %s)
        """

        cur.execute(insert_query, (
            entry["device_id"],
            entry.get("device_type"),
            datetime.utcfromtimestamp(int(entry["timestamp"])) if entry["timestamp"].isdigit() else entry["timestamp"],
            entry.get("sequence"),
            entry.get("raw_payload"),
            Json(entry.get("decoded")),
            entry.get("sensor_group"),
            entry.get("received_at")
        ))

        conn.commit()
        cur.close()
        conn.close()
    except Exception as e:
        print(f"❌ DB Error: {e}")


def save_useful_data(entry):
    try:
        conn = get_db_connection()
        cur = conn.cursor()

        decoded = entry.get("decoded", {})
        device_id = entry.get("device_id")
        timestamp = entry.get("timestamp")

        sensor_type = decoded.get("sensor_type", entry.get("sensor_group", "unknown"))
        readings = []

        for key in ['status', 'temp_celsius', 'water_detected', 'pulse_count']:
            if key in decoded:
                readings.append(f"{key}: {decoded[key]}")

        reading_text = ", ".join(readings)

        insert_query = """
            INSERT INTO useful_device_data (device_id, sensor_type, reading, timestamp)
            VALUES (%s, %s, %s, %s)
        """

        cur.execute(insert_query, (
            device_id,
            sensor_type,
            reading_text,
            datetime.utcfromtimestamp(int(timestamp)) if str(timestamp).isdigit() else timestamp
        ))

        conn.commit()
        cur.close()
        conn.close()

    except Exception as e:
        print(f"❌ Error saving to useful_device_data: {e}")


# db.py
def get_data_from_db(limit=100):
    try:
        conn = get_db_connection()
        cur = conn.cursor()
        cur.execute("SELECT * FROM sigfox_messages ORDER BY received_at DESC LIMIT %s", (limit,))
        rows = cur.fetchall()
        colnames = [desc[0] for desc in cur.description]
        cur.close()
        conn.close()
        return [dict(zip(colnames, row)) for row in rows]
    except Exception as e:
        print(f"❌ Error fetching data: {e}")
        return []



