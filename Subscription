  <!-- JavaScript for Interactive Pricing -->
  <script>
    const plans = {
      basic: {
        title: 'Basic Plan',
        price: '$9.99 / month',
        desc: 'Remote pipe control and scheduling'
      },
      pro: {
        title: 'Pro Plan',
        price: '$19.99 / month',
        desc: 'All features + weather prediction + auto-watering'
      },
      enterprise: {
        title: 'Enterprise Plan',
        price: 'Custom pricing',
        desc: 'Best for large farms with full integrations'
      }
    };

    function showPlan(type) {
      const plan = plans[type];
      document.getElementById('planDisplay').innerHTML = `
        <h3>${plan.title}</h3>
        <p>${plan.price}</p>
        <p>${plan.desc}</p>
      `;

      document.querySelectorAll('.pricing-tabs button').forEach(btn => {
        btn.classList.remove('active');
      });
      event.target.classList.add('active');
    }
  </script>

